<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create_teg_table" author="Lilla">

        <createTable tableName="teg" schemaName="todo">

            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="title" type="varchar(10)">

            </column>
            <column name="color" type="varchar(10)">

            </column>

            <column name="user_id" type="bigint">
                <constraints nullable="true"/>
            </column>

        </createTable>

        <addForeignKeyConstraint baseTableName="teg"
                                 baseTableSchemaName="todo"
                                 baseColumnNames="user_id"
                                 constraintName="FK_TEG_USER_ID"
                                 referencedTableName="user"
                                 referencedTableSchemaName="todo"
                                 referencedColumnNames="id"/>

        <createSequence sequenceName="teg_id_seq" incrementBy="1" startValue="1" schemaName="todo"/>

    </changeSet>
</databaseChangeLog>
